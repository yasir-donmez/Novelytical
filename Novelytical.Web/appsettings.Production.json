{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "AllowedOrigins": [
        "https://your-production-domain.com",
        "https://www.your-production-domain.com"
    ],
    "Firebase": {
        "ProjectId": "novelytical",
        "ServiceAccountPath": "/app/secrets/serviceAccountKey.json"
    },
    "Seq": {
        "ServerUrl": "https://your-seq-instance.com"
    },
    "RateLimit": {
        "PermitLimit": 50,
        "WindowMinutes": 1
    },
    "ConnectionStrings": {
        "DefaultConnection": "Server=your-neon-database-url;Database=novelytical;Port=5432;User Id=your-user;Password=your-password;Ssl Mode=Require;"
    }
}