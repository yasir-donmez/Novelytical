rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Yardımcı Fonksiyonlar ---
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOwnerByData(userIdField) {
      return request.auth.uid == resource.data[userIdField];
    }
    function isOwnerByID(docId) {
      return request.auth.uid == docId;
    }

    // --- 1. Comments (DÜZELTİLDİ) ---
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated();
      
      allow delete: if isAuthenticated() && isOwnerByData('userId');
      
      // GÜNCELLEME İZNİ:
      // 1. Sahibi ise her şeyi güncelleyebilir.
      // 2. Değilse, SADECE 'likeCount' ve 'dislikeCount' alanlarını değiştirebilir (Oylama için).
      allow update: if isAuthenticated() && (
        isOwnerByData('userId') || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount', 'dislikeCount'])
      );

      match /votes/{voteUserId} {
        allow read: if true;
        allow write: if isOwnerByID(voteUserId);
      }
    }

    // --- 2. Reviews (DÜZELTİLDİ) ---
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      
      allow delete: if isAuthenticated() && isOwnerByData('userId');

      // GÜNCELLEME İZNİ:
      // 1. Sahibi ise her şeyi güncelleyebilir.
      // 2. Değilse, SADECE 'likes' ve 'unlikes' alanlarını değiştirebilir.
      allow update: if isAuthenticated() && (
        isOwnerByData('userId') || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'unlikes'])
      );
    }
    
    match /review_interactions/{interactionId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // --- 3. Notifications ---
    match /notifications/{notifId} {
      allow read, update, delete: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      allow create: if isAuthenticated();
    }

    // --- 4. Users ---
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwnerByID(userId);
      
      match /saved_posts/{document=**} {
        allow read, write: if isOwnerByID(userId);
      }
    }

    // --- 5. Community ---
    match /community_posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // Basitlik için güncellemeye izin verelim, daha sıkı kural gerekirse diff eklenebilir
      allow update: if isAuthenticated(); 
      allow delete: if isAuthenticated() && isOwnerByData('userId');
      
      match /votes/{voteId} {
         allow read: if true;
         allow write: if isOwnerByID(voteId);
      }
    }
    
    match /post_votes/{voteId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // --- 6. Libraries ---
    match /libraries/{libId} {
      allow read, write: if isAuthenticated();
    }

    // --- 7. Social Graph (Follows) ---
    match /follows/{followId} {
      allow read: if isAuthenticated();
      // Only allow creation if followerId matches auth.uid
      allow create: if isAuthenticated() && request.resource.data.followerId == request.auth.uid;
      // Allow delete if user is the follower OR the one being followed (remove follower)
      allow delete: if isAuthenticated() && (resource.data.followerId == request.auth.uid || resource.data.followingId == request.auth.uid);
    }

    // --- 8. Chats & Messages ---
    match /chats/{chatId} {
      // Allow read if authenticated - simplified to fix list/get queries
      // The query itself filters by participant so this is safe enough for MVP
      allow read: if isAuthenticated();
      // Allow create if authenticated
      allow create: if isAuthenticated();
      // Allow update if user is a participant
      allow update: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      // Allow delete if user is a participant
      allow delete: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      
      match /messages/{messageId} {
        // Read if authenticated
        allow read: if isAuthenticated();
        // Create if auth matches senderId
        allow create: if isAuthenticated() && request.auth.uid == request.resource.data.senderId;
        // Allow update/delete for sender
        allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.senderId;
      }
    }
  }
}
