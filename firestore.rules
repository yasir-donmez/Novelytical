rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Yardımcı Fonksiyonlar ---
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOwnerByData(userIdField) {
      return request.auth.uid == resource.data[userIdField];
    }
    function isOwnerByID(docId) {
      return request.auth.uid == docId;
    }

    // --- 1. Comments (DÜZELTİLDİ) ---
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated();
      
      allow delete: if isAuthenticated() && isOwnerByData('userId');
      
      // GÜNCELLEME İZNİ:
      // 1. Sahibi ise her şeyi güncelleyebilir.
      // 2. Değilse, SADECE 'likeCount' ve 'dislikeCount' alanlarını değiştirebilir (Oylama için).
      allow update: if isAuthenticated() && (
        isOwnerByData('userId') || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount', 'dislikeCount'])
      );

      match /votes/{voteUserId} {
        allow read: if true;
        allow write: if isOwnerByID(voteUserId);
      }
    }

    // --- 2. Reviews (DÜZELTİLDİ) ---
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      
      allow delete: if isAuthenticated() && isOwnerByData('userId');

      // GÜNCELLEME İZNİ:
      // 1. Sahibi ise her şeyi güncelleyebilir.
      // 2. Değilse, SADECE 'likes' ve 'unlikes' alanlarını değiştirebilir.
      allow update: if isAuthenticated() && (
        isOwnerByData('userId') || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'unlikes'])
      );
    }
    
    match /review_interactions/{interactionId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // --- 3. Notifications ---
    match /notifications/{notifId} {
      allow read, update, delete: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      allow create: if isAuthenticated();
    }

    // --- 4. Users ---
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwnerByID(userId);
      
      match /saved_posts/{document=**} {
        allow read, write: if isOwnerByID(userId);
      }
    }

    // --- 5. Community ---
    match /community_posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // UPDATE: Owner can update everything. Others can ONLY update 'pollOptions' (for voting).
      allow update: if isAuthenticated() && (
        isOwnerByData('userId') || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['pollOptions'])
      );

      allow delete: if isAuthenticated() && isOwnerByData('userId');
      
      match /votes/{voteId} {
         allow read: if true;
         allow write: if isOwnerByID(voteId);
      }
    }
    
    // WARNING: Top-level votes collection needs strict validation or removal if unused.
    // Assuming this is used for some feature, restricting to auth user but verifying owner is hard without exact ID schema.
    // Ideally, voteId should be userId_postId. If likely random, we just ensure auth. 
    // BETTER: Allow create if auth, update/delete if owner (if vote doc has userId).
    // Safest fallback for now:
    match /post_votes/{voteId} {
      allow read: if true;
      // Require the vote document to contain 'userId' matching auth user for create/update/delete
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && isOwnerByData('userId');
    }

    // --- 6. Libraries ---
    match /libraries/{libId} {
      // Allow read for everyone (Public Profiles)
      allow read: if true;
      // Allow write ONLY if userId matches auth.uid
      // Create: Check new data
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Update/Delete: Check existing data (owner)
      allow update, delete: if isAuthenticated() && isOwnerByData('userId');
    }

    // --- 7. Novel Stats ---
    match /novel_stats/{novelId} {
      allow read: if true;
      allow create: if true; 
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewCount'])
                    && request.resource.data.viewCount == resource.data.viewCount + 1;
    }

    // --- 8. Social Graph (Follows) ---
    match /follows/{followId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.followerId == request.auth.uid;
      allow delete: if isAuthenticated() && (resource.data.followerId == request.auth.uid || resource.data.followingId == request.auth.uid);
    }

    // --- 10. Author Follows ---
    match /author_follows/{followId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // --- 11. Chats & Messages ---
    match /chats/{chatId} {
      // SECURED: Only participants can read
      allow read: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      allow delete: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      
      match /messages/{messageId} {
        // SECURED: Only participants (parent chat check implicit for subcollection? No, need to check parent or rely on query)
        // Firestore rules cascade: parent 'match' variables are available, but parent 'allow' rules DO NOT cascade.
        // However, we can access parent data via 'get'. But easier: Participants check on chat is key.
        // Actually, for subcollections, we often need to fetch parent.
        // BUT, simplified: if I can read chat, I can read messages? 
        // Standard pattern:
        allow read: if isAuthenticated() && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
        
        allow create: if isAuthenticated() && request.auth.uid == request.resource.data.senderId;
        
        allow update: if isAuthenticated() && (
          request.auth.uid == resource.data.senderId || 
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead'])
        );
        
        allow delete: if isAuthenticated() && request.auth.uid == resource.data.senderId;
      }
    }
  }
}
