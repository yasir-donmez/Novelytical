rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- YardÄ±mcÄ± Fonksiyonlar ---
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOwnerByData(userIdField) {
      return request.auth.uid == resource.data[userIdField];
    }
    function isOwnerByID(docId) {
      return request.auth.uid == docId;
    }

    // --- 1. Comments (DÃœZELTÄ°LDÄ°) ---
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated();
      
      allow delete: if isAuthenticated() && isOwnerByData('userId');
      
      // GÃœNCELLEME Ä°ZNÄ°:
      // 1. Sahibi ise her ÅŸeyi gÃ¼ncelleyebilir.
      // 2. DeÄŸilse, SADECE 'likeCount' ve 'dislikeCount' alanlarÄ±nÄ± deÄŸiÅŸtirebilir (Oylama iÃ§in).
      allow update: if isAuthenticated() && (
        isOwnerByData('userId') || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount', 'dislikeCount'])
      );

      match /votes/{voteUserId} {
        allow read: if true;
        allow write: if isOwnerByID(voteUserId);
      }
    }

    // --- 2. Reviews (DÃœZELTÄ°LDÄ°) ---
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      
      allow delete: if isAuthenticated() && isOwnerByData('userId');

      // GÃœNCELLEME Ä°ZNÄ°:
      // 1. Sahibi ise her ÅŸeyi gÃ¼ncelleyebilir.
      // 2. DeÄŸilse, SADECE 'likes' ve 'unlikes' alanlarÄ±nÄ± deÄŸiÅŸtirebilir.
      allow update: if isAuthenticated() && (
        isOwnerByData('userId') || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'unlikes'])
      );
    }
    
    match /review_interactions/{interactionId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // --- 3. Notifications ---
    match /notifications/{notifId} {
      allow read, update, delete: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      allow create: if isAuthenticated();
    }

    // --- 4. Users ---
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwnerByID(userId);
      
      match /saved_posts/{document=**} {
        allow read, write: if isOwnerByID(userId);
      }
    }

    // --- 5. Community ---
    match /community_posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // Basitlik iÃ§in gÃ¼ncellemeye izin verelim, daha sÄ±kÄ± kural gerekirse diff eklenebilir
      allow update: if isAuthenticated(); 
      allow delete: if isAuthenticated() && isOwnerByData('userId');
      
      match /votes/{voteId} {
         allow read: if true;
         allow write: if isOwnerByID(voteId);
      }
    }
    
    match /post_votes/{voteId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // --- 6. Libraries ---
    match /libraries/{libId} {
      allow read, write: if isAuthenticated();
    }

    // --- 7. Novel Stats (Herkes okuyabilir, viewCount herkes artÄ±rabilir, diÄŸerleri auth gerektirir) ---
    // --- 7. Novel Stats (Herkes okuyabilir, viewCount herkes artÄ±rabilir, diÄŸerleri auth gerektirir) ---
    match /novel_stats/{novelId} {
      allow read: if true;
      
      // ðŸ”’ GÃœVENLÄ°K AYARI (DÃœZELTÄ°LDÄ°):
      // Herkes (anonim dahil) SADECE 'viewCount' deÄŸerini 1 artÄ±rabilir.
      // Silerse, baÅŸka alanÄ± deÄŸiÅŸtirirse veya 1'den fazla artÄ±rÄ±rsa REDDEDÄ°LÄ°R.
      allow create: if true; // Ä°lk oluÅŸumda izin ver (cloud function yoksa)
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewCount'])
                    && request.resource.data.viewCount == resource.data.viewCount + 1;
    }

    // --- 8. Social Graph (Follows) ---
    // --- 8. Social Graph (Follows) ---
    match /follows/{followId} {
      allow read: if true; // Public read needed for profile stats
      // Only allow creation if followerId matches auth.uid
      allow create: if isAuthenticated() && request.resource.data.followerId == request.auth.uid;
      // Allow delete if user is the follower OR the one being followed (remove follower)
      allow delete: if isAuthenticated() && (resource.data.followerId == request.auth.uid || resource.data.followingId == request.auth.uid);
    }

    // --- 9. Chats & Messages ---
    match /chats/{chatId} {
      // Allow read if authenticated - simplified to fix list/get queries
      // The query itself filters by participant so this is safe enough for MVP
      allow read: if isAuthenticated();
      // Allow create if authenticated
      allow create: if isAuthenticated();
      // Allow update if user is a participant
      allow update: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      // Allow delete if user is a participant
      allow delete: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      
      match /messages/{messageId} {
        // Read if authenticated
        allow read: if isAuthenticated();
        // Create if auth matches senderId
        allow create: if isAuthenticated() && request.auth.uid == request.resource.data.senderId;
        
        // Update: Sender can update everything (e.g. edit text), others can ONLY mark as read
        allow update: if isAuthenticated() && (
          request.auth.uid == resource.data.senderId || 
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead'])
        );
        
        // Delete: Only sender can delete
        allow delete: if isAuthenticated() && request.auth.uid == resource.data.senderId;
      }
    }
  }
}
